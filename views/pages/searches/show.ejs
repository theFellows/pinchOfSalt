<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layouts/head.ejs') %>
  <title></title>
</head>

<body>
  <header>
    <%- include('../layouts/header.ejs')%>
  </header>
  <main>
    <ul>
      <% recipesDetails.forEach(item=>{ %>
      <section class="resultView">
       <img src="<%= item.image_url %>" />
        <h2><%= item.name %></h2>
        <form action="/details/<%= item.id %>" method="GET">
        <input type="submit" value="show details">
        </form>
      </section>
      <% }); %>
    </ul>
  </main>
</body>

</html>