
<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layouts/head.ejs') %>
  <title></title>
  <link rel="stylesheet" href="/views/pages/recipes/details.ejs">
</head>

<body class='lightBg'>
  <%- include('../layouts/header.ejs') %>

  <main>
    <ul>
      <% recipesDetails.forEach(item=>{ %>
      <section class="resultDetails">
        <div id="container">
          <div id="container2"><img id="recipe-detail-image" src="<%= item.image_url %>" />
          </div>
          <div id="container1">
            <h2 id="recipe-detail-title"><%= item.name %></h2> <br>
        <h4 id="recipe-detail-category"><b id="bold">Category:</b>  <%= item.category %></h3>
          
          <p id="recipe-detail-origin"><b id="bold">Origin:</b>  <%= item.area %></p>
            
            <form id="recipe-form" action="/bookmarks/<%= item.id %>" method="POST">
             <input type="hidden" id="id_user" name="id_user">
              <button id="recipe-button" type="submit" ><i class="fa fa-bookmark-o" style="font-size:36px;color:white"></i> Bookmark Recipe</button>
            </form>
          </div>

       </div>
        
        
          
       
       <h3 id="inst">Instructions:</h3>
          <div id="recipe-instructions">       
            <ol id="recipe-list-image" >
              <% item.ingredients.forEach(ingredient =>{ %>
              <li  id="recipe-list"><%= ingredient.split('+')[0] %> <%= ingredient.split('+')[1] %>:</li>
              <img id="ingredient-image" src="https://www.themealdb.com/images/ingredients/<%= ingredient.split('+')[1] %>.png">
                <% }); %>
            </ol>
        
            <p id="recipe-instruction"><b> <br><br> <%= item.instructions %></b></p>
            <iframe src="<%= item.video_url %>"></iframe>
          </div>
          
          
         
          
      
      </section>
      <% }); %>

    </ul>
  </main>
  <script>
    document.getElementById('id_user').value = localStorage.getItem('id')
  </script>
</body>

</html>