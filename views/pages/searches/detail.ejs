<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layouts/head.ejs') %>
  <title></title>
</head>

<body>
  <header>
    <%- include('../layouts/header.ejs')%>
  </header>
  <main>
    <ul>
      <% recipesDetails.forEach(item=>{ %>
      <section class="resultDetails">
        <img src="<%= item.image_url %>" />

        <h2><%= item.name %></h2>

        <h4>Category: <%= item.category %></h3>

          <p>Origin: <%= item.area %></p>

          <p>Ingredients: </p>
          <ul>
     <% item.ingredients.ingredientsPicture.forEach(ingredient =>{ %>
      <li><%= ingredient %></li>
            <img src="https://www.themealdb.com/images/ingredients/<%= ingredient %>.png">
              <% }); %>
              <% item.ingredients.ingredientsMeasure.forEach(ingredient =>{ %>
                <li><%= ingredient %></li>
                  <% }); %>
          </ul>
          <p>Instructions: </p>
          <p><%= item.instructions %></p>

          <iframe src="<%= item.video_url %>"></iframe>
          <br />
      </section>
      <% }); %>

    </ul>
  </main>
</body>

</html>