<!DOCTYPE html>
<html lang="en">

    <%- include ('../layouts/head') %>

<body class="formBody">
   
<main id="main">
   
    <br>
    <form action="/recipes" method="POST">
        <h2>Add Your Recipe</h2><br><br>
        <label for="name">Recipe Name</label>
        <br>
        <input class="edit" type="text" value="" name="name"></input>
        <br><br>
        <label for="image_url">Enter an Image</label>
        <br>
        <input class="edit" type="text" placeholder="image_url" name="image_url"></input>
        <br><br>
        <label for="category">Category</label>
        <br>
        <input class="edit" type="text" value="" name="category"></input>
        <br><br>
        <label for="instructions">Instructions</label>
        <br>
        <textarea id="textarea" class="edit" name="instructions"></textarea>
        <br><br>
        <label for="area">Area</label>
        <br>
        <input class="edit" type="text" value="" name="area"></input>
        <br><br>
        <input type="hidden" name="id_user" id="id_usere">
        <br>
        <p class="add_field_button">Add Another Ingredient</p>
        <br><br>
        <section class="input_fields_wrap">
          
           <div><label for="ingredient">Ingredient</label>
            <br>
            <input class="edit" type="text" value="" name="ingredient"></input>
            <br><br>
            <label for="measure">Measure</label>
            <br>
            <input class="edit" type="text" value="" name="measure"></input>
            <br><a href="#" class="remove_field">Remove</a><br>
        </div> 
        </section>
        <br>
        <label for="video_url">Enter a Video</label>
        <br>
        <input class="edit" type="text" placeholder="video_url" name="video_url"></input>
        <br>
         <br>
        <button id="add-recipe-button" type="submit">Add Recipe</button>

    </form>
</main>

<%- include ('../layouts/footer') %>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        if(localStorage.getItem('token') == undefined) {
        window.location.replace("/registerForm")
}
document.getElementById('id_usere').value = localStorage.getItem('id')
    </script>
    <script src="/js/app.js"></script>
    
</body>

</html>

