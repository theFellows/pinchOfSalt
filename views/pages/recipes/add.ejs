<!DOCTYPE html>
<html lang="en">

    <%- include ('../layouts/head') %>

<body class='lightBg'>
    <%- include ('../layouts/header') %>
<main id="main">
   
    <br>
    <form action="/recipes" method="POST">
        <h2>Add Your Recipe</h2><br><br>
        <input class="edit" type="text" value="" name="name" placeholder="Recipe Name"></input>
        <br><br>
        
  
        <input class="edit" type="text" value="" name="category" placeholder="Category"></input>
        <br><br>

        <input class="edit" type="text" value="" name="area" placeholder="Origin"></input>
        <br><br>
 
        
        <label for="instructions">Instructions</label>
        <br>
        <textarea id="textarea" class="edit" name="instructions"></textarea>
        <br><br>
        
        
        <br><br>
        <label for="ingredients">Ingredients</label>
        <p class="add_field_button"><i class="fa fa-plus" style="font-size:24px"></i></p>
        <section class="input_fields_wrap">
           <div>
            <input class="edit" type="text" value="" name="measure" placeholder="2 tps"></input>
            <input class="edit" type="text" value="" name="ingredient" placeholder="salt"></input>
            <a href="#" class="remove_field"><i class="fa fa-trash-o" style="font-size:24px"></i></a><br>
        </div> 
        </section>
        <br>

        <input class="edit" type="text" placeholder="Image URL" name="image_url"></input>
        <br><br>
        <input class="edit" type="text" placeholder="Video URL" name="video_url"></input>
        <br>
         <br>
        <button id="add-recipe-button" type="submit">Add Recipe</button>

    </form>
</main>

<%- include ('../layouts/footer') %>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        if(localStorage.getItem('token') == undefined) {
        window.location.replace("/registerForm")
}
    </script>
    <script src="/js/app.js"></script>
    
</body>

</html>

