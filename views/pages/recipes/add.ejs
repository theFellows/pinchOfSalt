<!DOCTYPE html>
<html lang="en">

    <%- include ('../layouts/head') %>
    
<body class='lightBg'>
    <%- include('../layouts/header.ejs') %>
<main id="main">
   
    <br>
    <form action="/recipes" method="POST">
        <h2>Add Your Recipe</h2><br><br>
        <input class="edit" type="text" value="" name="name" placeholder="Recipe Name"></input>
        <br><br>
        
  
        <input class="edit" type="text" value="" name="category" placeholder="Category"></input>
        <br><br>

        <input class="edit" type="text" value="" name="area" placeholder="Origin"></input>
        <br><br>
 
        
        <label for="instructions">Instructions</label>
        <br>
        <textarea id="textarea" class="edit" name="instructions"></textarea>
        <br><br>

        <input type="hidden" name="id_user" id="id_usere">
        <br>

        <br><br>
        <p class="add_field_button"><i class="fa fa-plus" style="font-size:20px"></i>Add ingredients</p>
        <br>
        <br>
        <section class="input_fields_wrap">

        </section>
        <br>

        <input class="edit" type="text" placeholder="Image URL" name="image_url"></input>
        <br><br>
        <input class="edit" type="text" placeholder="Video URL" name="video_url"></input>
        <br>
         <br>
         <br>
         <br>
        <button id="add-recipe-button" type="submit">Add Recipe</button>

    </form>
</main>

<%- include ('../layouts/footer') %>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        if(localStorage.getItem('token') == undefined) {
        window.location.replace("/registerForm")
}
document.getElementById('id_usere').value = localStorage.getItem('id')
    </script>
    <script src="/js/app.js"></script>
    
</body>

</html>

