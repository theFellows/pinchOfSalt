<!-- cookbook -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My CookBook</title>
    <link rel="stylesheet" href="/css/base.css">
</head>
<body>
    <p class="elementsCount">Number of bookmarks in your cookbook: <%= bookmarksList.length %></p>
<section>
    <% bookmarksList.forEach(bookmark => { %>
    <a href='/bookmarks/<%= bookmark.id %>'>
        <section class="resultView">
          <div class='overlayContainer'>
              <img src="<%= bookmark.image_url %>" class="image" />
              <div class="overlay">
                  <div class="text"><%= bookmark.name %></div>
              </div>
          </div>
      </section></a>
    <% }); %>
</section>

<script>
    if(localStorage.getItem('token') == undefined) {
    window.location.replace("/registerForm")
}
</script>
</body>
</html>
